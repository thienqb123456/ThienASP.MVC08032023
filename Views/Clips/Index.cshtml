@model IPagedList<ThienASPMVC08032023.Models.Clip>
@using X.PagedList;
@using X.PagedList.Mvc.Core;

@{
    ViewData["Title"] = "Clips Manager";
}

<partial name="_StatusMessage"></partial>

<h1>Clips Manager</h1>

<nav class="navbar navbar-light bg-light">
    <form asp-controller = "Clips" asp-action= "Index" class="form-inline">
        <input name="searchString" class="form-control mr-sml-2" type="search" placeholder="Search" aria-label="Search" >
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" >Search</button>
    </form>
</nav>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                AuthorUsername
            </th>
            <th>
                Description
            </th>
            <th>
                Url
            </th>
            <th>
                TimeCreated
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var clip in Model) {
        <tr>
            <td>
                    @clip.Name
            </td>
            <td>
                    @clip.AuthorUsername
            </td>
            <td>
                    @clip.Description
            </td>
            <td>
                    @clip.Url
            </td>
            <td>
                    @clip.TimeCreated
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@clip.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@clip.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@clip.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


@Html.PagedListPager(Model , currentPage => Url.Action("Index",
        new { currentPage }),
        new PagedListRenderOptions {
            LiElementClasses = new string[] {"page-item"},
            PageClasses = new string[] {"page-link"}
        } )