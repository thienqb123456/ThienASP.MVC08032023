@model IEnumerable<ThienASPMVC08032023.Models.Clip>

@{
    ViewData["Title"] = "Clips Manager";
}

<partial name="_NotificationTempData"></partial>
<h1>@ViewData["Title"]</h1>

<nav class="navbar navbar-light bg-light">
    <form asp-controller = "Clips" asp-action= "Index" class="form-inline">
        <input name="searchString" class="form-control mr-sml-2" type="search" placeholder="Search" aria-label="Search" >
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit" >Search</button>
    </form>
</nav>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeCreated)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var clip in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => clip.Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => clip.Author)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => clip.Description)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => clip.Url)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => clip.TimeCreated)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@clip.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@clip.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@clip.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
