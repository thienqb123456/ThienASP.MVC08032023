@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@{
}


<ul class="navbar-nav">

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item ">

            <a class="btn btn-warning " asp-area="Identity" asp-page="/Account/Manage/Index">Hi, @UserManager.GetUserName(User)</a>
        </li>

        <li class="nav-item">

            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("", new { area = "" })" >
                <button type="submit" class="btn btn-light">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item ">
            <a class="btn btn-warning " asp-area="Identity" asp-page="/Account/Login" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("", new { area = "" })">Login</a>
        </li>

        <li class="nav-item">
            <a class="btn btn-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }



</ul>