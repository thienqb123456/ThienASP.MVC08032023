@model Comment
@{
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Clip</h4>
    <hr />
    <a class="text-decoration-none fw-bold mb-1" href="~/@Model.User!.UserName"> @Model.User!.UserName </a>
    <p class="text-muted small mb-0"> Shared publicly - @Model.TimeCreated</p>
    <p class="mt-3 mb-4 pb-2"> @Model.CommentMsg</p>
